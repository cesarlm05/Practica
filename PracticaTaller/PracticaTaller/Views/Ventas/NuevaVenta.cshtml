@model List<PracticaTaller.Models.AccesoDatos.Producto>

<br />
<div>
    <input id="txt-buscar" type="text" placeholder="Producto"/>
    <button id="botonEnviar" disabled="disabled">ok</button>
</div>
<br/>

<style>
    #content {
        position: absolute;
        min-height: 50%;
        width: 180%;
        top: 8%;
        left: 35%;
    }

    .selected {
        cursor: pointer;
    }

        .selected:hover {
            background-color: #0585C0;
            color: white;
        }

    .seleccionada {
        background-color: #0585C0;
        color: white;
    }
</style>

<table class="table-bordered">
    <thead>
        <tr>
            <th>Nombre:</th>
            <th>Descripción:</th>
            <th>Stock:</th>
            <th>Precio:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr class="producto">
                <td class="nombre">@producto.nombre</td>
                <td>@producto.descripcion</td>
                <td>@producto.stock</td>
                <td>@producto.precio</td>
            </tr>
        }

     <div id="content">
        <label>Agregar artículos</label>
        <button id="bt_add" class="btn btn-default">Agregar</button>
        <button id="bt_del" class="btn btn-default">Eliminar</button>
        <button id="bt_delall" class="btn btn-default">Eliminar todo</button>
        <table id="tabla" class="table table-bordered">
        <thead>
            <tr>
                <td>Nº</td>
                <td>Descripción</td>
                <td>Precio</td>
            </tr>
        </thead>
    </table>
    </div>

    </tbody>
</table>

<script src="~/Scripts/ScriptsVentas.js"></script>